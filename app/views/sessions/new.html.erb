<h1>The Gossip Project</h1>
<%= form_tag url_for(action: 'create'), method: "post" do %>

  <%= label_tag 'Username' %>
  <%= text_field_tag 'email', @users.email %>
  <br /> <br />

  <%= label_tag 'Password' %>
  <%= text_area_tag 'password_digest', @users.password_digest %>
  <br /> <br />

  <%= submit_tag "Login" %>

<% end %>

